# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI (default provider)
OPENAI_API_KEY=your_openai_api_key

# MacroDroid Webhook (for SMS via Android phone)
# Get this URL from MacroDroid webhook trigger
MACRODROID_WEBHOOK_URL=https://trigger.macrodroid.com/YOUR_UNIQUE_ID/send-sms

# Twilio (optional - for professional SMS/WhatsApp)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890
# TWILIO_WHATSAPP_NUMBER=+1234567890

# Meta Messenger (optional)
# META_PAGE_ACCESS_TOKEN=your_meta_page_access_token

# Resend (email notifications - optional)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourcompany.com

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
